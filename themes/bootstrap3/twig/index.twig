{% extends 'layout.twig' %}
{% block title %}GitList{% endblock %}

{% block body %}
{% include 'navigation.twig' %}

<div class="container" id="repositories">
    <form class="form-inline" role="search" action="" method="GET">
        <div class="form-group">
            <input name="search" value="{{ search }}" type="text" class="form-control" placeholder="Search..." autofocus>
        </div>
        <button type="submit" class="btn btn-default">Go</button>
    </form>
    <br />

    {% if repositories %}
    <div class="list panel-group" id="accordion_root" role="tablist">
        {% for repo in repositories %}
            {% include 'repo_accordion.twig' with {directory: repo, parent: 'root', search: search} only %}
        {% endfor %}
    </div>
    {% else %}
    <div class="bg-info">
        <p>No repositories found...</p>
    </div>
    {% endif %}
    <hr />

    {% include 'footer.twig' %}
</div>
{% endblock %}

{% extends 'layout.twig' %}
{% block title %}GitList{% endblock %}

{% block body %}
{% include 'navigation.twig' %}

<div class="container" id="repositories">
    <div class="search">
        <input class="search" placeholder="search" autofocus>
    </div>

    <div class="list" class="panel-group" id="accordion_root" role="tablist">
        <div class="panel panel-default">
            {% for repo in repositories %}
                {% include 'repo_accordion.twig' with {directory: repo, parent: 'root'} only %}
            {% endfor %}
        </div>
    </div>
    <hr />

    {% include 'footer.twig' %}
</div>
{% endblock %}
